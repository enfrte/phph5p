<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}PHP H5P Demo{% endblock %}</title>

		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
			{% block importmap %}{{ importmap('app') }}{% endblock %}
		{% endblock %}
	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container">
				<a class="navbar-brand" href="#">phph5p</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ml-auto">
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('_logout_main') }}">Logout</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">Courses</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_admin') }}">Admin</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Login</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_register') }}">Register</a>
							</li>
						{% endif %}
					</ul>
					<div class="ms-auto"> <!-- This div with ms-auto class pushes content to the right -->
					{% if app.user and app.user.email %}
						<span class="navbar-brand">Welcome, {{ app.user.email }}</span>
					{% else %}
						<span class="navbar-brand">Not logged in.</span>
					{% endif %}
					</div>
				</div>
				
			</div>
		</nav>

		<main>
			{% block body %}{% endblock %}
		</main>
	</body>
</html>
